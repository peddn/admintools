[Unit]
Description=gunicorn daemon for project ${project}
Requires=gunicorn_${project}.socket
After=network.target

[Service]
User=${user}
Group=www-data
WorkingDirectory=${site}
ExecStart=${projects_home}/${project}/${virtual_environment}/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn_${project}.sock \
          ${project}.wsgi:application

[Install]
WantedBy=multi-user.target

